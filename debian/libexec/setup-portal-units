#!/bin/bash

# Create portal-units directory if it doesn't exist
mkdir -p "$HOME/.local/share/learning-portal/courses"

# Check if schulstick tutor directory exists and create symlink if needed
if [ -d "/usr/share/learning-portal/courses" ]; then
    for course_dir in /usr/share/learning-portal/courses/*; do
        if [ -d "$course_dir" ]; then
            course_name=$(basename "$course_dir")
            if [ ! -L "$HOME/.local/share/learning-portal/courses/$course_name" ]; then
                ln -sf "$course_dir" "$HOME/.local/share/learning-portal/courses/$course_name"
            fi
        fi
    done
fi
